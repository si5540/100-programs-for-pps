#include <stdio.h>
#include <stdlib.h>
int main()
{
      int i, n,*data;
      printf("How many elements you want to add : ");
      scanf("%d", &n);
      data = (int*)(n, sizeof(int));
      if(data == NULL)
      {
            printf("Error!!! Memory is Not present.");  
            exit(0);
      }
      printf("\n");
      for(i = 0; i < n; ++i)
      {
            printf("Enter Number %d: ", i + 1);
            scanf("%d", data + i);
      }
      for(i = 1; i < n; ++i)
      {
            if(*data < *(data + i))
                  *data = *(data + i);
      }
      printf("\nLargest Element = %d", *data);
      return 0;
}
